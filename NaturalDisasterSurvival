Add("17. Yerçekimini Sıfırla", function() workspace.Gravity = 196.2 end)
Add("18. Noclip (Duvar Geç)", function() _G.NC = true RunService.Stepped:Connect(function() if _G.NC then for _,v in pairs(LP.Character:GetDescendants()) do if v:IsA("BasePart") then v.CanCollide = false end end end end) end)
Add("19. Ctrl+Tıklanan Yere Işınlan", function() end)
