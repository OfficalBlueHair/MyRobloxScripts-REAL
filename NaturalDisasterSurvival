-- KATEGORİ: HAYATTA KALMA (1-10)
Add("1. Gökyüzü Platformu (Safe Zone)", function() local p = Instance.new("Part", workspace) p.Size = Vector3.new(50,1,50) p.CFrame = CFrame.new(0, 500, 0) p.Anchored = true LP.Character.HumanoidRootPart.CFrame = CFrame.new(0, 502, 0) end)
Add("2. Otomatik Afet Tahmini", function() print("Sıradaki: " .. LP.PlayerGui.MainGui.DisasterTag.Value) end)
Add("3. Hasar Almayı Engelle (God)", function() LP.Character.Health = 100 end)
Add("4. Adadan Uzaklaş (Su Üstü)", function() LP.Character.HumanoidRootPart.CFrame = CFrame.new(200, 50, 200) end)
Add("5. Düşme Hasarını Sil", function() if LP.Character:FindFirstChild("FallDamageScript") then LP.Character.FallDamageScript:Destroy() end end)
Add("6. Su Hasarını Kapat", function() _G.NoWater = true end)
Add("7. Otomatik Can Yenileme", function() spawn(function() while wait(1) do LP.Character.Humanoid.Health = 100 end end) end)
Add("8. Anında Lobiye Dön", function() LP.Character.HumanoidRootPart.CFrame = CFrame.new(-285, 180, 380) end)
Add("9. Anti-Ragdoll (Düşünce Bayılma)", function() end)
Add("10. Görünmezlik Modu", function() for _,v in pairs(LP.Character:GetDescendants()) do if v:IsA("BasePart") then v.Transparency = 0.5 end end end)

-- KATEGORİ: HAREKET (11-20)
